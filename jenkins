pipeline {
    agent any
    tools {
        maven 'MAVEN' // Make sure 'Maven' is the name of your Maven installation in Jenkins
        jdk 'Jdk' // Make sure 'jdk' is the name of your JDK installation in Jenkins
    }
    stages {
        stage('Build') {
            steps {
                script {
                   bat "mvn clean install"
                }
            }
        }
    }
    post {
        always {
            // Archive Maven Surefire reports
            archiveArtifacts artifacts: 'reports/*.html', allowEmptyArchive: true
        }
    }
}
